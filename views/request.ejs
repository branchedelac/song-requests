<%- include("partials/header"); -%>
<div class="page-heading">
  <h1>Önska en låt</h1>
</div>

<form class="request-form" action="/request" method="post">
  <div class="form-group">
    <label for="title">Titel</label>
    <input class="form-control" type="text" name="title" value="">
  </div>
  <div class="form-group">
    <label for="performer">Artist</label>
    <input class="form-control" type="text" name="performer" value="">
  </div>
  <div class="form-group">
    <label for="requester">Önskas av</label>
    <input class="form-control" type="text" name="requester" value="">
  </div>
  <div class="form-group">
    <label for="message">Hälsning</label>
    <textarea class="form-control" name="message" rows="8" cols="80"></textarea>
  </div>
  <button type="submit" class="btn btn-lg">Submit</button>
</form>

<%- include("partials/footer"); -%>
